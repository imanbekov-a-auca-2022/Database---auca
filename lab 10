CREATE TABLE employees (
    employee_id SERIAL PRIMARY KEY,
    first_name VARCHAR(50) NOT NULL,
    last_name VARCHAR(50) NOT NULL,
    email VARCHAR(100),
    department VARCHAR(100),
    salary NUMERIC(12,2),
    age INT,
    hire_date DATE,
    experience_years INT,
    bonus NUMERIC(10,2)
);

