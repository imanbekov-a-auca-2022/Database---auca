CREATE TABLE employee_skills (
    id SERIAL PRIMARY KEY,
    employee_id INT REFERENCES employees(employee_id) ON DELETE CASCADE,
    skill_name VARCHAR(100) NOT NULL
);

INSERT INTO employee_skills (employee_id, skill_name)
VALUES
